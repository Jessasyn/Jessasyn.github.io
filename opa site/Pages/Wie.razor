@page "/Videos"

@inject NavigationManager Manager;
<!--Set title to wie-->

@code{
    List<string> Videos = new List<string>() {
        "DIC and I love her",
        "DIC Brown sugar",
        "DIC Honky tonk women",
        "DIC Jumpig jack flash",
        "DIC Oerend hard",
        "DIC Ole time Rock & Roll",
        "DIC Watching the riverflow",
        "DIC Wonderfull tonight",
        "DIC You can't stop the music",
        "meppel (1)",
        "meppel (2)",
    };

    void ToIndex() => Manager.NavigateTo("");

    void ToWie() => Manager.NavigateTo("Wie");

    void ToContact() => Manager.NavigateTo("Contact");

    void ToRepertoire() => Manager.NavigateTo("Repertoire");

    void ToMuziek() => Manager.NavigateTo("Muziek");

    void ToVideos() => Manager.NavigateTo("Videos");
